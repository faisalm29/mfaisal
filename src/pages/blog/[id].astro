---
import { getCollection, render } from "astro:content";
import GeneralPostLayout from "@layouts/GeneralPostLayout.astro";
import CustomAnchorLinkHeading from "@components/CustomAnchorLinkHeading.astro";
import CustomHeading2 from "@components/CustomHeading2.astro";
import CustomHeading3 from "@components/CustomHeading3.astro";
import CustomHeading4 from "@components/CustomHeading4.astro";

export async function getStaticPaths() {
  const generalEntries = await getCollection("general", ({ data }) => {
    return import.meta.env.PROD ? data.published === true : true;
  });

  const headings = await Promise.all(
    generalEntries.map(async (generalPost) => {
      const data = await render(generalPost);
      return data.headings;
    }),
  );

  return generalEntries.map((post, index) => ({
    params: {
      id: post.id,
    },
    props: { post, headings: headings[index] },
  }));
}

const { post, headings } = Astro.props;
// remarkPluginFrontmatter contains reading time for the post
const { Content, remarkPluginFrontmatter } = await render(post);
---

<GeneralPostLayout
  frontmatter={{ ...post.data, ...remarkPluginFrontmatter }}
  headings={headings}
>
  <Content
    components={{
      a: CustomAnchorLinkHeading,
      h2: CustomHeading2,
      h3: CustomHeading3,
      h4: CustomHeading4,
    }}
  />
</GeneralPostLayout>
