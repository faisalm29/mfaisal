---
import { Icon } from "astro-icon/components";

const props = Astro.props;
---

{
  props.href.startsWith("#") ? (
    <a
      {...props}
      href={props.href}
      class="absolute top-0 right-0 bottom-0 -left-4 mt-auto mb-auto hidden w-fit -translate-x-1/2 flex-col items-center justify-center opacity-0 transition-opacity duration-300 ease-in-out group-hover:opacity-100 md:flex"
    >
      <Icon name="ri:hashtag" class="text-secondary-emphasize text-2xl" />
    </a>
  ) : (
    <a {...props} target="_blank">
      <slot />
    </a>
  )
}
