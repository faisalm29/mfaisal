---
import { getCollection, render } from "astro:content";
import MDXPostLayout from "@layouts/MDXPostLayout.astro";

export async function getStaticPaths() {
  const allGeneralPosts = await getCollection("general");
  return allGeneralPosts.map((post) => ({
    params: {
      id: post.id,
    },
    props: { post },
  }));
}

const { post } = Astro.props;
// remarkPluginFrontmatter contains reading time for the post
const { Content, remarkPluginFrontmatter } = await render(post);
---

<MDXPostLayout frontmatter={{ ...post.data, ...remarkPluginFrontmatter }}>
  <Content />
</MDXPostLayout>
