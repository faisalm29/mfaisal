---
import { getCollection, render } from "astro:content";
import GeneralPostLayout from "@layouts/GeneralPostLayout.astro";

export async function getStaticPaths() {
  const allProgrammingPosts = await getCollection("programming");
  return allProgrammingPosts.map((post) => ({
    params: {
      id: post.id,
    },
    props: { post },
  }));
}

const { post } = Astro.props;
// remarkPluginFrontmatter contains reading time for the post
const { Content, remarkPluginFrontmatter } = await render(post);
---

<GeneralPostLayout frontmatter={{ ...post.data, ...remarkPluginFrontmatter }}>
  <Content />
</GeneralPostLayout>
