---
import { getCollection, render } from "astro:content";
import GeneralPostLayout from "@layouts/GeneralPostLayout.astro";

export async function getStaticPaths() {
  const allProgrammingPosts = await getCollection("programming");

  const headings = await Promise.all(
    allProgrammingPosts.map(async (programmingPost) => {
      const data = await render(programmingPost);
      return data.headings;
    })
  );

  return allProgrammingPosts.map((post, index) => ({
    params: {
      id: post.id,
    },
    props: { post, headings: headings[index] },
  }));
}

const { post, headings } = Astro.props;
// remarkPluginFrontmatter contains reading time for the post
const { Content, remarkPluginFrontmatter } = await render(post);
---

<GeneralPostLayout
  frontmatter={{ ...post.data, ...remarkPluginFrontmatter }}
  headings={headings}
>
  <Content />
</GeneralPostLayout>
