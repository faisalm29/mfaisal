---
interface Props {
  placeholder: string;
  url: string;
}

const { placeholder, url } = Astro.props;
---

<a
  class="border-secondary-emphasize text-secondary-emphasize hover:bg-secondary-emphasize hover:text-neutral rounded-full border bg-transparent px-6 py-0.5 font-medium capitalize transition-all duration-300"
  href={url}>{placeholder}</a
>
